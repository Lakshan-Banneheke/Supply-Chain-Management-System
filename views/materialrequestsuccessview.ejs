<%- include('_header',{title:"Dashboard"}) %>
<body class="hold-transition sidebar-mini">
<div class="wrapper">
    <!-- Navbar -->
    <nav class="main-header navbar navbar-expand navbar-white navbar-light">
        <!-- Left navbar links -->
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
            </li>
            <li class="nav-item d-none d-sm-inline-block">
                <a class="nav-link">Material Requests View</a>
            </li>
        </ul>

        <!-- Right navbar links -->
        <ul class="navbar-nav ml-auto">


            <li class="nav-item">
                <a class="nav-link" data-widget="fullscreen" href="#" role="button">
                    <i class="fas fa-expand-arrows-alt"></i>
                </a>
            </li>

        </ul>
    </nav>
    <!-- /.navbar -->

    <%- include('_sidebar') %>


    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="row">

            <div class="col-8 p-0 m-1 ml-3">
                <div class="card p-4">

                    <form action='/issuematerialreq/<%= req_det.request_id %>' method="post">

                        <table class="table">
                            <thead class="table-dark">
                            <tr>
                                <th scope="col">Materials</th>
                                <th scope="col">Material Name</th>
                                <th scope="col">Qty</th>
                                <th scope="col">Unit</th>
                            </tr>
                            </thead>

                            <tbody>
                            <% for (var i = 0; i < materials.length; i++) { %>
                                <tr>
                                    <th scope="row"> <%= i+1 %> </th>
                                    <td> <%= materials[i].material_name %> </td>
                                    <td> <input type="text" disabled class="form-control" style="border: none" placeholder="<%= materials[i].requested_quntity %>" name="receieved_quantity" >   </td>
                                    <td> <%= materials[i].unit %> </td>
                                    <!--                                    <td> <button type="button" class="btn btn-danger btn-sm rounded-2">Change</button> </td>-->
                                </tr>
                            <% } %>
                            </tbody>
                        </table>
                        <div>

                        <div class="col-9"  style="float: left;"><button disabled class="btn btn-success" >All the materials are available.</button> </div>
                        <div class="col-3" style="float: right;"><button type="submit"  class="btn btn-primary">Issue Materials</button> </div>
                        </div>
                    </form>


                </div>
            </div>

            <div class="col p-0" >
                <div class="card m-1 mr-3">
                    <div class="card-header accent-dark"> <h3> Material Request</h3>
                        <p> date </p>
                    </div>
                    <div class="card-body">
                        <div class="row mb-2">
                            <div class="col"> <button type="button" class="btn btn-secondary btn-sm">Project</button> </div>
                            <div class="col"> <%= req_det.project_id %> </div>
                        </div>

                        <div class="row mb-2">
                            <div class="col"> <button type="button" class="btn btn-secondary btn-sm">Section</button> </div>
                            <div class="col"> <%= req_det.section_id %> </div>
                        </div>

                        <div class="row">
                            <div class="col"> <button type="button" class="btn btn-secondary btn-sm">Requested By</button> </div>
                            <div class="col"> <%= req_det.user_id %> </div>
                        </div>

                    </div>
                </div>
            </div>


        </section>

    </div>
    <!-- /.content-wrapper -->
    <footer class="main-footer">
        <div class="float-right d-none d-sm-block">
            <b>All rights reserved</b>
        </div>
        <strong>Copyright &copy; 2021 <a>SE-Group 12</a>.</strong>
    </footer>

    <!-- Control Sidebar -->
    <aside class="control-sidebar control-sidebar-dark">
        <!-- Control sidebar content goes here -->
    </aside>
    <!-- /.control-sidebar -->
</div>
<!-- ./wrapper -->
</body>
<%- include('_footer') %>