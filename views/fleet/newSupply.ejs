  <script>
      $(function () {
        $("#example1").DataTable({
          "responsive": true, "lengthChange": false, "autoWidth": false,
          "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
        }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');
        $('[data-mask]').inputmask();
        /*$('#reservationdate').datetimepicker({
            format: 'L'
        });*/
        $('#reservation').daterangepicker();

        var vehicles = JSON.parse('<%- JSON.stringify(vehicles) %>');
        vehicles.forEach( vehicle => {
          vehicle.value = vehicle.id;
          vehicle.label = vehicle.title;
        })
        $( "#input" ).autocomplete({
          minLength: 0,
          source: vehicles,
          focus: function( event, ui ) {
            $( "#input" ).val( ui.item.label );
            return false;
          },
          select: function( event, ui ) {
            $( "#project" ).val( '' );
            $( "#body" ).append( 
              $(`
                <tr>
                  <td></td>
                  <td>${ui.item.label}</td>
                  <td><input type="text" class="form-control" placeholder="Qty"></td>
                  <td><input type="text" class="form-control" placeholder="Description"></td>
                  <td><input type="text" class="form-control" placeholder="Amount"></td>
                  <td></td>
                </tr>
                `)
             );
    
            return false;
          }
        })
        .autocomplete( "instance" )._renderItem = function( ul, item ) {
          return $( "<li>" )
            .append( "<div>" + item.label + " - " + item.brand + "</div>" )
            .appendTo( ul );
        };
      });
  </script>