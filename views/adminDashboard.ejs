            <div class="container-fluid">
                <div class="card card-primary card-outline">
                    <div class="card-header">
                        <h3 class="card-title">Unverified Users</h3>
                    </div> <!-- /.card-body -->
                    <div class="card-body">
                        <div style="overflow-x:auto;">
                            <%if (unverifiedUsers.length > 0) {%>
                            <table class="table table-striped">
                                <thead class="thead-dark">
                                <tr>
                                    <th scope="col">Full Name</th>
                                    <th scope="col">E-mail</th>
                                    <th scope="col">Category</th>
                                    <th scope="col">Contact Number</th>
                                    <th>Approve</th>
                                    <th>Disapprove</th>
                                </tr>
                                </thead>
                                <tbody>

                                <%

                                    unverifiedUsers.forEach(function(user) {
                                        let user_id = user.user_id;
                                        let name = user.name;
                                        let email = user.email;
                                        let category = user.cat_name;
                                        let contact = user.contact_num;
                                %>
                                <tr><td><%=name %></td><td><%=email%></td><td><%=category%></td><td><%=contact%></td>
                                    <td><form action='/admin/approveUser' method=post><button type='submit' class='btn btn-success' name='verify-button'>Approve</button><input type='hidden' name='user_id' value=<%=user_id%>></form></td>
                                    <td><form action='/admin/disapproveUser' method=post><button type='submit' class='btn btn-danger' name='disapprove-button'>Disapprove</button><input type='hidden' name='user_id' value=<%=user_id%>></form></td></tr>

                                <%})%>

                                </tbody>
                            </table>
                                <%} else { %>
                                <div class="alert alert-secondary"> No Unverified Users</div>
                            <%}%>
                        </div>


                    </div>
                    <!-- /.card-body -->
                </div>
