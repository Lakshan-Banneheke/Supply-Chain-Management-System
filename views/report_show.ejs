                        <td class="tg-0lax">Material Name</td>
                        <td class="tg-0lax">Total Quantity</td>
                        <td class="tg-0lax">Unit</td>
                    </tr>
                    </thead>
                    <tbody>


                    <% for (var i = 0; i < report.length; i++) { %>

                        <tr>
                            <td class="tg-0lax" rowspan="<%= report[i][1].length == 0 ? 1 : report[i][1].length +1 %>"> <%= report[i][0] %></td>
                            <td class="tg-0lax"></td>
                            <td class="tg-0lax"></td>
                            <td class="tg-0lax"></td>
                        </tr>
                        <% for (var j = 0; j < report[i][1].length; j++) { %>
                            <tr>
                                <td class="tg-0lax"><%= report[i][1][j].material_name %></td>
                                <td class="tg-0lax"><%= report[i][1][j].sum %></td>
                                <td class="tg-0lax"><%= report[i][1][j].unit %></td>
                            </tr>
                        <% } %>
                    <% } %>

                    </tbody>
                </table>
