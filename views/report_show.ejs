            <div class="container-fluid">
                <h2>Project Consumption Report</h2>

                    <h3>Project Name : <%= projectName %></h3>
                <table class="table table-bordered" >
                    <thead style="background-color:#B0B0B0">
                    <tr>
                        <th class="tg-0lax" rowspan="2" style="text-align: center;">Section</th>
                        <th class="tg-0lax" colspan="3" style="text-align: center;">Material Details</th>
                    </tr>
