      <section class="content">
        <div class="container-fluid">
          <div class="card card-primary">
            <div class="card-body">  
              <div id="err_msg4">
              <!-- for error msg -->
              </div>
              <div class="form-group">
                <label>Select Project</label>
                <select class="form-control" id='project_select2'>
                  <option value="" disabled selected>Select Project</option>
                  <% if (allprojects.length> 0){ %>
                    <% allprojects.forEach(project=> { %>
                      <option><%= project.project_name %></option>
                    <% }) %>
                  <% } else { %>
                    <p>no projects</p>
                  <% } %>
                </select>
              </div>
            </div>
            <div class="card-body alert  text-center" id="All_Estimate_view2">
              <p style="background-color: rgb(105, 236, 145);text-align: center; ">Select a project to see Estimations</p>
            </div>
          </div>


          <div class="card card-primary">  
            <form  id="search_estimate_byID" action="estimationView" method="POST">
              <div class="card-body">  
                  <div id="err_msg4">
                  <!-- for error msg -->
                  </div>
                <div class="form-group">
                  <label for="e_id">Enter Estimate ID to see Estimation</label>
                  <input type="number" class="form-control" id="e_id1" name="e_id" placeholder="Enter Estimate id" required>
                </div>
                <button type="submit" class="btn btn-primary">Show</button>
            </form>
          </div>

          <% if(est_project.length>0) {%> 
          <div class="card card-primary card-outline">
            <div class="card-body table-responsive no-padding">
              <div class="card-header">
                <% if(est_project.length>0) {%>
                  <h4 class="box-title">Estimate ID: <span id="span_edit_estimate"><%= est_project[0].e_id %></span></h4>
                  <h4 class="box-title"><%= `Project Name: ${est_project[0].project_name}` %></h4>
                  <!-- <h4 class="box-title">Sended: <% if(est_project[0].submit_status==true){ %>Yes<% } else { %>No<% } %></h4> -->
                  <% if(est_project[0].submit_status==true){ %>
                  <h4 class="box-title"><%= `Sended date: ${est_project[0].submit_date.getFullYear()}-${est_project[0].submit_date.getMonth()+1}-${est_project[0].submit_date.getDate()}` %></h4>
                  <% } %>
                  <% if(est_project[0].submit_status==false){ %>
                    <div style="display: flex;flex-direction:row;flex-wrap:nowrap;justify-content:space-between">
                    <button class="btn btn-primary" style="background-color: rgb(230, 13, 13);" type="button" id="btn-edit">Delete</button>
                    <button class="btn btn-primary" type="button" id="btn-send">Send</button>
                    </div>
                  <% } %>
                <% }%>
              </div>
              
              <table class="table table-bordered table-hover">
                <tbody><tr>
                  <th>Material</th>                  
                  <th>Size/Description</th>                  
                  <th>Quantity</th>
                  <th>Unit Cost</th>
                  <th>Cost</th>
                </tr>
                <% if (estimates.length > 0){ %>
                  <% let totalcost = 0 %>
                  <% estimates.forEach(estimate => { %>
                    <tr>
                      <td><%= estimate.m_name %></td>
                      <td><%= estimate.m_amount %></td>
                      <td><%= estimate.quantity %></td>
                      <td><%= estimate.m_cost %></td>
                      <td><%= estimate.quantity * estimate.m_cost %></td>
                    </tr>
                    <% totalcost += (estimate.quantity * estimate.m_cost)  %>
                  <% }) %>
                    <tr>
                      <td align="center" colspan="4"><b>Total cost</b></td>
                      <td><b><%= totalcost %></b></td>
                    </tr>
                <% } else { %>
                    <tr>
                      <td align="center" colspan="5">no records</td>
                    </tr>
                <% } %>
                </tbody>
              </table>
            </div>
          </div>
          <% } %>
